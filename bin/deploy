#!/bin/bash

if [ $# -eq 1 ] ; then
  user=$1
fi

current_branch=$(git branch --show-current)

git stash && \
  git checkout master && \
  git fetch origin &&
  git pull origin master && \
  bundle install && \
  bundle exec rake deploy to=production user=$user && \
  git tag releases/$(date +"%Y-%m-%d--%H-%M") master && \
  git push --tags && \
  git checkout $current_branch && \
  git stash pop
