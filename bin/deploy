#!/bin/bash

current_branch=$(git branch --show-current)

git stash && \
  git checkout master && \
  git fetch origin &&
  git pull origin master && \
  ssh -A watchdoge1 -- /usr/local/bin/rails_deploy_admin_apientreprise_production.sh &&
  ssh -A watchdoge2 -- /usr/local/bin/rails_deploy_admin_apientreprise_production.sh &&
  ssh -A watchdoge3 -- /usr/local/bin/rails_deploy_admin_apientreprise_production.sh &&
  ssh -A watchdoge4 -- /usr/local/bin/rails_deploy_admin_apientreprise_production.sh &&
  ssh -A watchdoge5 -- /usr/local/bin/rails_deploy_admin_apientreprise_production.sh &&
  ssh -A watchdoge1 -- /usr/local/bin/rails_deploy_admin_apientreprise_staging.sh &&
  ssh -A watchdoge2 -- /usr/local/bin/rails_deploy_admin_apientreprise_staging.sh &&
  ssh -A watchdoge3 -- /usr/local/bin/rails_deploy_admin_apientreprise_staging.sh &&
  ssh -A watchdoge4 -- /usr/local/bin/rails_deploy_admin_apientreprise_staging.sh &&
  ssh -A watchdoge5 -- /usr/local/bin/rails_deploy_admin_apientreprise_staging.sh &&
  git tag releases/$(date +"%Y-%m-%d--%H-%M") master && \
  git push --tags && \
  git checkout $current_branch && \
  git stash pop
