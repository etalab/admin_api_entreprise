#!/bin/bash

if [ $# -eq 1 ] ; then
  branch=$1
elif [ $# -eq 2 ] ; then
  branch=$1
  user=$2
else
  branch=develop
fi

server="dashboard.entreprise.api.gouv.fr"

bundle exec mina deploy domain=$server branch=$branch user=$user to=sandbox
bundle exec mina seeds domain=$server branch=$branch user=$user to=sandbox
