<div class="fr-grid-row">
  <div class="fr-col-12">
    <div class="fr-grid-row fr-mb-2w">
      <div class="fr-col-12">
        <h1>
          <%= t('.title') %>
        </h1>
      </div>

    </div>

    <div class="fr-grid-row fr-mt-2w">
      <div class="fr-col-12 fr-col-sm-4 fr-col-md-3">
        <nav class="fr-sidemenu" aria-label="Menu latÃ©ral">
          <div class="fr-sidemenu__inner">
            <div class="fr-collapse" id="fr-sidemenu-wrapper">
              <ul class="fr-sidemenu__list">
                <% @faq_entries_grouped_by_categories.keys.each do |category_name| %>
                  <%= render partial: "shared/faq_sidemenu_list_item", locals: { path: faq_index_path(anchor: category_name.parameterize), link_name: category_name } %>
                <% end %>
              </ul>
            </div>
          </div>
        </nav>
      </div>

      <div class="fr-col-12 fr-col-sm-8 fr-col-md-9" data-controller="anchor-buttons" data-anchor-buttons-tags-value='["h1", "h2", "h3", "section"]'>
        <% @faq_entries_grouped_by_categories.each do |category_name, faq_entries| %>
          <h2 id="<%= category_name.parameterize %>" class="fr-mt-4w">
            <%= category_name %>
          </h2>

          <div class="fr-mb-2w">
            <% faq_entries.each do |faq_entry| %>
              <%= render partial: 'shared/faq/faq_entry', locals: { faq_entry: faq_entry } %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
