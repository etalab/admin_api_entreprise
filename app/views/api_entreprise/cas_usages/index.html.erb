<div id="cas-usages" class="fr-container--fluid">
  <div class="banner fr-pt-5w fr-pb-8w">
    <div class="fr-container">
      <h1><%= t('.title') %></h1>

      <p class="fr-text--lead"><%= t('.description').html_safe %></p>
    </div>
  </div>

  <div class="content fr-container fr-mt-5w fr-mb-5w">
    <% I18n.t('api_entreprise.cas_usages_entries', raise: true).keys.each do |cas_usage_key| %>
      <div class="fr-card fr-enlarge-link">
        <div class="fr-card__body">
          <div class="fr-card__content">
            <h2 class="fr-card__title fr-h5">
              <%= link_to t(".cards.#{cas_usage_key}.title"), cas_usage_path(cas_usage_key) %>
            </h2>
            <p class="fr-card__desc fr-text--lg"><%= t(".cards.#{cas_usage_key}.description") %></p>
            <div class="fr-card__end">
              <ul class="fr-badges-group">
                <% I18n.t("api_entreprise.cas_usages_entries.#{cas_usage_key}.user_types").each do |user_type| %>
                  <li class="fr-m-0-5v"><p class="fr-badge fr-badge--sm fr-badge--<%= user_type_tag_color(user_type) %>"><%= user_type %></p></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
        <div class="fr-card__header">
          <div class="fr-card__img">
            <%= image_tag("api_entreprise/cas_usages/pictos/#{cas_usage_key}.svg", class: %w(card-image fr-responsive-img), alt: cas_usage_key) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
