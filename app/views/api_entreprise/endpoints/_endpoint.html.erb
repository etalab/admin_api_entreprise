<div class="fr-col-xs-12 fr-col-sm-6 fr-col-lg-4 fr-p-2v" id="<%= dom_id(endpoint) %>" data-algolia-search-catalogue-hit="<%= endpoint.algolia_search_id %>">
  <article class="endpoint-card fr-grid-card">
    <header>
      <div>
        <%= endpoint_status_badge(endpoint) %>
      </div>
      <div class="fr-grid-row fr-grid-row--gutters fr-grid-row--start">
        <div class="fr-col-8">
          <h3 class="fr-h5" data-algolia-search-catalogue-hit-attribute="title">
            <%= endpoint.title %>
          </h3>
        </div>

        <div class="fr-col-4">
          <% endpoint.providers.each do |provider| %>
            <%= image_tag(provider.image_path, class: %w(provider)) %>
          <% end %>
        </div>
      </div>
    </header>

    <section class="body">
      <div class="description fr-text--sm fr-mb-0" data-algolia-search-catalogue-hit-attribute="description">
        <%= endpoint.description %>
      </div>

      <% if endpoint.perimeter['entities'].present? %>
        <ul class="list-unstyled fr-pl-0 fr-mt-2w">
          <% endpoint.perimeter['entities'].each do |perimeter_entity| %>
            <li>
              <%= icon(t("api_entreprise.endpoint.perimeter.entities.#{perimeter_entity}.icon", raise: true)) %>

              <strong class="fr-pl-1w">
                <%= t("api_entreprise.endpoint.perimeter.entities.#{perimeter_entity}.name", raise: true) %>
              </strong>
            </li>
          <% end %>
        </ul>
      <% end %>
    </section>

    <section class="metadata">
      <ul class="list-unstyled">
        <li>
          <strong>Identifiant d'appel :</strong> <%= endpoint.call_id %>
        </li>
        <li>
        <strong>Utilisation des donn√©es :</strong>
          <%= icon(t("api_entreprise.endpoint.opening.#{endpoint.opening}.icon", raise: true)) rescue nil %>
          <%= t("api_entreprise.endpoint.opening.#{endpoint.opening}.name", raise: true) %> <br>
          <span class="fr-mb-0 fr-text--sm">
            <%= icon(t("api_entreprise.endpoint.opening.#{endpoint.opening}.included_icon", raise: true)) rescue nil %>
            <%= link_to t("api_entreprise.endpoint.opening.#{endpoint.opening}.included", raise: true), faq_index_path(anchor: 'comment-transmettre-le-jeton-d-acces-en-tout-securite') rescue nil %>
          </span>
        </li>

      </ul>
    </section>
    <footer class="">
      <ul class="fr-btns-group fr-btns-group--right fr-btns-group--inline-md fr-mt-1w">
        <% if endpoint.implemented? %>
          <li>
            <%= link_to t('.cta.swagger'), developers_openapi_path(anchor: endpoint.redoc_anchor), data: { turbo: false }, class: %(fr-btn fr-btn--secondary) %>
          </li>
        <% end %>

        <li>
          <%= link_to t('.cta.documentation'), endpoint_path(uid: endpoint.uid), class: %(fr-btn) %>
        </li>
      </ul>
    </footer>

  </article>
</div>
