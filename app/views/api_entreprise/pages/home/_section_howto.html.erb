<section id="section-obtain">
  <div class="fr-container">
    <div class="fr-grid-row">
      <div class="left-info fr-col-xl-8 fr-col-12 fr-pt-5w padding-left-container">
        <div class="left-info--text">
          <h2 class="fr-h3"><%= t('.title') %></h2>
          <p class="fr-text--lg"><%= t('.description').html_safe %></p>
          <a href="https://api.gouv.fr/les-api/api-entreprise/demande-acces" class="fr-link" target="_blank" rel="noopener"><%= t('.check_eligibity') %></a>
        </div>

        <div class="left-info--cards fr-col-12 fr-grid-row">
          <div class="fr-card fr-m-5v fr-enlarge-link fr-col-sm-5 fr-col-md-5 fr-col-lg-5 fr-col-xl-5 fr-col-xs-12">
            <div class="fr-card__body">
              <div class="fr-card__content">
                <h3 class="fr-h4 fr-card__title">
                  <%= link_to t('.cgu_link'), cgu_path %>
                </h3>
                <p class="fr-card__desc"><%= t('.cgu_description') %></p>
              </div>
            </div>
          </div>

          <div class="fr-card fr-m-5v fr-enlarge-link fr-col-sm-5 fr-col-md-5 fr-col-lg-5 fr-col-xl-5 fr-col-xs-12">
            <div class="fr-card__body">
              <div class="fr-card__content">
                <h3 class="fr-h4 fr-card__title">
                  <a href="https://annuaire-entreprises.data.gouv.fr/" target="_blank" rel="noopener"><%= t('.annuaire_data_link') %></a>
                </h3>
                <p class="fr-card__desc"><%= t('.annuaire_data_description').html_safe %></p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="right-info fr-background-default-white fr-col-xl-4 fr-col-12 fr-p-6w padding-right-container">
        <div class="info-container">
          <h2 class="fr-h4"><%= t('.access_account_title') %></h2>
          <p><%= t('.access_account_description').html_safe %></p>
          <ul class="fr-mb-3w">
            <li><%= t('.access_account_list_token').html_safe %></li>
            <li><%= t('.access_account_list_stats').html_safe %></li>
            <li><%= t('.access_account_list_content').html_safe %></li>
          </ul>

          <%= link_to login_path, class: "fr-btn" do %>
            <%= t('.connect') %>&nbsp;<span class="fr-icon-arrow-right-line" aria-hidden="true"></span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
