<section id="section-partners" class="fr-p-6w">
  <div class="fr-container--fluid">
    <div class="fr-grid-row provider-container">
      <h2 class="fr-h3 fr-ml-2v fr-col-12"><%= t('.title').html_safe %></h2>
      <p class="fr-ml-2v fr-col-12"><%= t('.subtitle') %></p>

      <div class="providers">
        <% @providers.each do |provider| %>
          <a href="<%= endpoints_with_provider_query_filter_path(provider) %>" target="_blank" class="card-provider fr-m-2v fr-pt-2w fr-pr-2w fr-pl-2w">
          <%= image_tag("providers/#{provider.uid}.png", alt: "Logo fournisseur de donnÃ©es - #{provider.name}") %>
          </a>
        <% end %>
      </div>

      <div class="buttons fr-mt-3w">
        <%= link_to endpoints_path, class: "fr-btn fr-m-1w" do %>
          <%= t('.link_endpoints') %>&nbsp;<span class="fr-icon-arrow-right-line" aria-hidden="true"></span>
        <% end %>

        <button class="fr-btn fr-btn--secondary fr-m-1w" disabled><%= t('.link_new_api') %></button>
      </div>
    </div>
  </div>
</section>
