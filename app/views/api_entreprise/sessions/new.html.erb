<h2 class="center">
  <%= t('.title').html_safe %>
</h2>

<div class="fr-container">
  <div class="fr-grid-row">
    <div class="fr-col-md-6 fr-col-offset-md-3 fr-col-12 center">
      <div class="fr-card fr-card--horizontal fr-card--no-arrow">
        <div class="fr-card__body">
          <div class="fr-card__content">
            <%= form_with(url: public_magic_link_create_url, method: :post, data: { turbo: false }) do |f| %>
              <%= f.label :email, t('.label').html_safe, class: "fr-label left" %>
              <%= f.email_field :email, placeholder: "Email", required: true, class: %w(fr-input) %>
              <%= f.button t('.button'), class: %w(fr-btn fr-btn--md fr-mt-2w), id: 'send_magic_link' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="fr-grid-row">
    <div class="fr-col-md-6 fr-col-offset-md-3 fr-col-12 center">
      <p class="fr-hr-or fr-mt-8v"><%= t('or') %></p>

      <div class="fr-connect-group">
        <%= form_with(url: login_api_gouv_path, method: :post, data: { turbo: false }) do |f| %>
          <%= f.button t('.button'), class: %w(fr-connect fr-connect-moncomptepro fr-m-auto), id: 'login_oauth' do %>
            <span class="fr-connect__login">S’identifier avec</span>
            <span class="fr-connect__brand">MonComptePro</span>
          <% end %>
            <p>
              <a href="https://moncomptepro.beta.gouv.fr/" target="_blank"  rel="noopener" title="Qu’est-ce que MonComptePro ? - Nouvelle fenêtre">
                Qu’est-ce que MonComptePro ?
              </a>
            </p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="fr-grid-row">
    <div class="fr-col-md-6 fr-col-offset-md-3 fr-col-12 center">
      <p class="fr-mt-3w fr-mb-0"><%= t('.faq', link: link_to(t('.faq_link'), faq_index_path(anchor: 'comment-se-connecter-a-l-espace-utilisateur'))).html_safe %></p>
    </div>
  </div>
</div>
