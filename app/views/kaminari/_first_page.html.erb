<%# Link to the "First" page
  - available local variables
    url:           url to the first page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<li>
  <% if current_page.first? %>
    <%= content_tag('a',  class: %w(fr-pagination__link fr-pagination__link--first), 'aria-disabled': true, role: 'link') do %>
      <%= t('views.pagination.first').html_safe %>
    <% end %>
  <% else %>
    <%= link_to t('views.pagination.first').html_safe, url, remote: remote, class: %w(fr-pagination__link fr-pagination__link--first), 'aria-disabled': current_page.first?, role: 'link' %>
  <% end %>
</li>
