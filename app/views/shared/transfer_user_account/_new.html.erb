<%= form_with url: transfer_account_path, method: :post, id: :transfer_account, data: { turbo_frame: '_top' } do |form| %>
  <div class="fr-modal__content">
    <h1 id="modal_title" class="fr-modal__title">
      <span class="fr-icon-arrow-right-line fr-icon--lg"></span>
      <%= t('.title') %>
    </h1>

    <%= render partial: 'shared/alerts' %>
    
    <p><%= t('.description').html_safe %></p>

    <div class="fr-input-group">
      <%= form.label :email, t('.email.label'), class: %w(fr-label) %>
      <%= form.email_field :email, placeholder: t('.email.placeholder'), class: %w(fr-input) %>
    </div>
  </div>

  <div class="fr-modal__footer">
    <ul class="fr-btns-group fr-btns-group--right fr-btns-group--inline-reverse fr-btns-group--inline-lg fr-btns-group--icon-left">
      <li>
        <%= form.button t('.cta'), data: { confirm: t('.confirm') }, class: %w(fr-btn) %>
      </li>
    </ul>
  </div>
<% end %>
