<% container_class = action_name == 'redoc' ? 'fr-container-fluid' : 'fr-container' %>

<div class="<%= container_class %> fr-mb-5w fr-mt-5w">
  <turbo-frame id="alerts">
    <%= render partial: 'shared/alerts' %>
  </turbo-frame>

  <% if  tokens_to_export? %>
    <div class="fr-highlight fr-highlight--pink-tuile fr-ml-0">
      <p>
        <%= t('shared.users.new_token') %>

        <%= link_to t('shared.users.new_token_download'), api_particulier_new_tokens_download_path, class: "fr-btn", id: 'download_new_tokens_file' %>
      </p>
    </div>
  <% end %>

  <% if content_for?(:body) %>
    <%= yield(:body) %>
  <% else %>
    <%= yield %>
  <% end %>
</div>
